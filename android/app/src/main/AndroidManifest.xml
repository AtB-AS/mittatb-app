<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="no.mittatb">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />

    <application
      android:name=".MainApplication"
      android:label="@string/app_name"
      android:icon="@mipmap/ic_launcher"
      android:allowBackup="false"
      android:theme="@style/BootTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|screenSize|smallestScreenSize|uiMode"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/app_scheme" />
            </intent-filter>
        </activity>
        <!-- Kogenta SDK remove receivers / services -->
        <service
            android:name="com.kogenta.kettle.core.mmi.service.SensorService"
            android:foregroundServiceType="location"
            android:launchMode="singleInstance"
            android:enabled="true"
            android:exported="false"
            tools:node="remove" />
        <service
            android:name="com.kogenta.kettle.core.manager.compatibility.MotionService"
            android:enabled="true"
            android:exported="false"
            tools:node="remove"/>
        <provider
            android:name="com.kogenta.kettle.core.api.KettleInitializer"
            android:authorities="${applicationId}.KettleInitializer"
            android:enabled="true"
            android:exported="false"
            tools:node="remove" />
        <receiver
            android:name="com.kogenta.kettle.core.bluetooth.broadcast.BeaconBroadcastReceiver"
            android:enabled="true"
            android:exported="false"
            tools:node="remove">
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" tools:node="remove"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.kogenta.kettle.core.broadcast.BootBroadcastReceiver"
            android:enabled="true"
            android:exported="false"
            tools:node="remove">
            <intent-filter>
                <action android:name="com.kogenta.kettle.BootBroadcastReceiver.SHUTDOWN" tools:node="remove"/>
                <action android:name="com.kogenta.kettle.BootBroadcastReceiver.WAKEUP" tools:node="remove"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.kogenta.kettle.core.broadcast.LocationMotionBroadcastReceiver"
            android:enabled="true"
            android:exported="false"
            tools:node="remove">
            <intent-filter>
                <action android:name="com.kogenta.kettle.ActivityBroadcastReceiver" tools:node="remove"/>
                <action android:name="com.kogenta.kettle.LocationBroadcastReceiver" tools:node="remove"/>
                <action android:name="com.kogenta.kettle.BatchLocationBroadcastReceiver" tools:node="remove"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.kogenta.kettle.core.api.StartupBroadcastReceiver"
            android:enabled="true"
            android:exported="false"
            tools:node="remove">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" tools:node="remove"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>